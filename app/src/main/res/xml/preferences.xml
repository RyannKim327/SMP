<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Song view">

        <ListPreference
            android:key="DEFAULT_FOLD"
            android:title="@string/settings_fold_title"
            android:entryValues="@array/settings_fold_values"
            android:entries="@array/settings_fold_entries"
            />

        <CheckBoxPreference
            android:key="FOLLOW_SONG"
            android:title="Scroll to new song played"
            android:summary="When song start playing, scroll to it"
            android:defaultValue="true"
            />

        <EditTextPreference
            android:key="ROOT_FOLDER"
            android:title="Root folder"
            android:summary="@string/settings_root_folder"
            />

    </PreferenceCategory>

    <PreferenceCategory android:title="Accelerometer shake">

        <CheckBoxPreference
            android:key="ENABLE_SHAKE"
            android:title="Accelerometer shake"
            android:summary="Go to next song when shaked."
            android:defaultValue="false"/>

        <!-- todo: improve this with a number picker or slider or shake force counter... -->
        <EditTextPreference
            android:key="SHAKE_THRESHOLD"
            android:title="Shake force threshold"
            android:summary="@string/settings_default_shake_threshold"
            android:numeric="integer"
            android:defaultValue="@string/settings_default_shake_threshold"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="Miscellaneous">
        <Preference
            android:key="@string/settings_rescan_key"
            android:title="@string/settings_rescan_title"
            android:summary="@string/settings_rescan"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="About">

        <Preference
            android:title="Author"
            android:summary="@string/settings_author"/>

        <Preference
            android:title="Version number"
            android:summary="@string/settings_version_title"/>

        <Preference
            android:title="Sources"
            android:summary="@string/settings_source"/>

        <Preference
            android:title="License"
            android:summary="@string/settings_opensource"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="Special thanks">

        <Preference
            android:title="Daniele De Santis &amp; WPZOOM"
            android:summary="icons found on iconfinder.com">
        </Preference>

        <Preference
            android:title="Sue Smith's"
            android:summary="tutorials on creating a Music Player on Android">
        </Preference>

    </PreferenceCategory>

</PreferenceScreen>
